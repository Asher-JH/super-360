<div class="w-1/3 flex flex-col justify-center items-start package pt-8 my-12 package-container  <%- isFeatured ? 'border-l border-r border-light-grey' : '' %>">
    <!-- Bundle title -->
    <h4 class="w-full text-center text-light-grey font-semibold text-3xl bundle-title"><%- title %></h4>

    <!-- Bundle points needed -->
    <div class="my-10 mx-auto flex flex-col justify-center items-center px-12 py-5 rounded-xl border border-super-light-grey bundle-points-block <%- isFeatured ? 'block-bg-featured' : 'block-bg-normal' %> ">
        <p class="text-center text-light-grey font-light text-sm">Minumum of</p>
        <span class="text-center font-bold text-5xl text-light-grey my-1"><%- points %></span>
        <p class="text-center text-light-grey font-light text-base">points*</p>
    </div>

    <!-- Bundle benefits -->
    <ul class="w-full px-5 benefits-list">
        <% benefits.forEach(element => { %>
            <li class="text-center text-light-grey font-light text-base mb-3">
                <%- element %> 
            </li>
        <% }) %>
    </ul>

    <!-- If featured-package show -->

    <% if (isFeatured) { %>    
        <div class="mx-auto mt-16 px-8 py-2 rounded-lg border border-light-grey text-white text-base font-normal feature-tag">
            Most Valueable
        </div>
    <% } %>
</div>