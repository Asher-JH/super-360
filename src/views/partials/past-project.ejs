<div class="w-full flex flex-col my-12">
    <div class="w-full relative linear-orange-bg border-1 border-transparent rounded-xl p-1 img-container-shadow">
        <!-- iframe -->
        <iframe width="100%" height="560" style="width: 100%; height: 560px; border: 1px; border-radius: 0.75rem; max-width: 100%;" frameborder="0" allowfullscreen allow="xr-spatial-tracking; gyroscope; accelerometer" scrolling="no" src="<%- url %>"></iframe>
    </div>
    <div class="w-full flex flex-row justify-between items-center pt-8 px-4">
        <p class="text-white text-xl lg:text-3xl font-normal"><%- title %></p>
        <!-- button -->
        <input type="text" id="input-<%- id %>" value="<%- url %>" hidden="true">
        <button id="<%- id %> " class="copy-link-btn uppercase text-xs lg:text-sm py-3 px-8 lg:px-10 rounded-xl font-bold btn-letter-spacing transition-colors hover:cursor-pointer text-light-grey thin-border hover:bg-slate-300 hover:text-[#1f1d2b]">
            Copy Link
        </button>
    </div>
    <div class="mt-16 w-2/3 mx-auto bg-light-grey divider-height"></div>
</div>