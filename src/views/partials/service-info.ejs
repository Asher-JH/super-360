<div class="w-full flex <%- isReversed ? 'flex-row-reverse': 'flex-row' %> px-4 py-16">
    <div class="w-1/2 mx-auto">
        <div class="w-11/12 relative linear-orange-bg border-1 border-transparent rounded-xl p-1 img-container-shadow">
            <img src="/images/service-placeholder.png" alt="service-image" class="w-full border-1 border-transparent rounded-xl">
        </div>
    </div>
    <div class="w-1/2 flex flex-col justify-center items-center px-10">
        <h4 class="w-2/3 text-primary-orange text-left font-normal text-3xl"><%- title %> </h4>
        <p class="w-2/3 text-light-grey text-left text-base py-8"><%- desc %></p>
        <a href="<%- link %> " class="w-2/3 flex flex-row justify-center items-center uppercase text-sm py-3 px-6 rounded-xl font-bold btn-letter-spacing transition-colors hover:cursor-pointer text-light-grey thin-border hover:bg-slate-300 hover:text-[#1f1d2b]">
            <i data-feather="play" class="w-5 mr-4"></i>
            <span>Watch Demo</span>
        </a>
    </div>
</div>