<div class="w-full mx-auto flex flex-col items-center lg:flex-row <%- isReversed ? 'flex-row-reverse': 'flex-row' %> lg:px-4 py-16">
    <div id="container-<%- id %>" class="iframe-container w-10/12 lg:w-1/2 mx-auto mb-10 lg:mb-0">
        <div class="w-full linear-orange-bg border-1 border-transparent rounded-xl p-1 img-container-shadow">
            <img src="/images/<%- imgLink %>" alt="service-image" class="w-full border-1 border-transparent rounded-xl h-72">
            <iframe width="100%" height="500" class="w-full" style="display: none; width: 100%; height: 500px; border: none; max-width: 100%;" frameborder="0" allowfullscreen allow="xr-spatial-tracking; gyroscope; accelerometer" scrolling="no" src="<%- url %>"></iframe>
        </div>
    </div>
    <div id="info-container-<%- id %>" class="info-box w-4/5 lg:w-1/2 flex flex-col justify-center items-center px-10">
        <h4 class="w-full lg:w-2/3 text-primary-orange text-center lg:text-left font-normal text-5xl lg:text-3xl"><%- title %> </h4>
        <p class="w-full lg:w-2/3 text-light-grey text-center lg:text-left text-xl lg:text-base py-8"><%- desc %></p>
        <div class="w-full lg:w-2/3 flex flex-row justify-center items-center">
            <button id="<%- id %>" class="service-btn flex flex-row justify-center items-center uppercase text-lg lg:text-sm py-3 px-6 rounded-xl font-bold btn-letter-spacing transition-colors hover:cursor-pointer text-light-grey thin-border hover:bg-slate-300 hover:text-[#1f1d2b]">
                <i data-feather="play" class="w-5 mr-4"></i>
                <span>Watch Demo</span>
            </button>
        </div>
    </div>
</div>